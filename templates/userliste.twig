<!Doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Liste utilisateurs</title>
        <style>
            table {
                text-align: center;
                border-collapse: collapse;
            }
            td, th {
                padding: 1ex;
            }
            table td:not(:first-child),
            table th:not(:first-child) 
            { border-left: solid thin gray }
            .square {
                display: inline-block;
                width: 3em;
                height: 1em;
            }
            
        </style>
    </head>
    <body>
        <table>
            <tr><th>Joueur</th><th>Parties</th><th>Gagnées</th><th>Couleur préférée</th></tr>
            {% for u in users %}
            <tr>
                <td>{{ u.id }}</td>
                <td>{{ u.nom }}</td>
                <td>{{ u.prenom }}</td>
                <td>{{ u.username }}</td>
                <td>{{ u.password }}</td>
                <td>{{ u.cle }}</td>
                <td><span class="{{ u.color }} square"></span></td>
            </tr>
            {% endfor %}
        </table>
    </body>
</html>